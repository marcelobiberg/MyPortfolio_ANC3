@model MyPortfolio.ViewModels.SiteViewModel
@{
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="header_wrap">
    <div class="logo anchor">
    </div>
    <div class="trigger">
        <a href="#">
            <span class="one"></span>
            <span class="two"></span>
        </a>
    </div>
</div>

<div class="beker_tm_menu">
    <div class="nav_list">
        <a class="btn btn-dark mb-5" asp-action="Login" asp-controller="Account">Entrar</a>
        <ul class="anchor_nav">
            <li></li>
            <li><a href="#home">Início</a></li>
            <li><a href="#about">Sobre mim</a></li>
            <li><a href="#services">Tecnologias</a></li>
            <li><a href="#portfolio">Portfólio</a></li>
            <li><a href="#contact">Contato</a></li>
        </ul>
    </div>
</div>

<!-- HERO -->
<div class="beker_tm_section" id="home">
    <div class="beker_tm_hero_wrap" data-img-url="../img/3.jpg">
        <div class="overlay"></div>
        <div class="texts_wrap">
            <div class="name_holder">
                <h3>@Model.Profile.Nome</h3>
            </div>
            <div class="text_typing">
                <p>| <span class="beker_tm_animation_text_word"></span> |</p>
            </div>
        </div>
        <div class="beker_tm_down anchor">
            <div class="down-icon white top_120">
                <a href="#about">
                    <svg width="26px" height="100%" viewBox="0 0 247 390" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" style="fill-rule:evenodd;clip-rule:evenodd;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:1.5;">
                        <path id="wheel" d="M123.359,79.775l0,72.843" style="fill:none;stroke:#fff;stroke-width:20px;" />
                        <path id="mouse" d="M236.717,123.359c0,-62.565 -50.794,-113.359 -113.358,-113.359c-62.565,0 -113.359,50.794 -113.359,113.359l0,143.237c0,62.565 50.794,113.359 113.359,113.359c62.564,0 113.358,-50.794 113.358,-113.359l0,-143.237Z" style="fill:none;stroke:#fff;stroke-width:20px;" />
                    </svg>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- /HERO -->

<div class="beker_tm_wrap_inner" id="about">
    <!-- ABOUT -->
    <div class="beker_tm_section">
        <div class="beker_tm_main_content">
            <div class="beker_tm_about_wrap">
                <div class="container">
                    <div class="author_image">
                        <img src="~/img/@Model.Profile.Avatar" alt="Avatar no usuário" />
                    </div>
                    <div class="author_info">
                        <p>
                            @Model.Profile.AboutDescription
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /ABOUT -->
    <!-- SERVICES -->
    <div class="beker_tm_section" id="services">
        <div class="container">
            <div class="beker_tm_main_title">
                <span>Tecnologias</span>
                <h3>Amo trabalhar com </h3>
            </div>
            <div class="beker_tm_services beker_tm_waypoint_effect">
                <ul>
                    <li>
                        <div class="inner">
                            <i class="svg fas fa-laptop-code fa-3x"></i>
                            <h3>Desenvolvimento Web</h3>
                            <p>Desenvovimento web mais focado em back-end.</p>
                        </div>
                    </li>
                    <li>
                        <div class="inner">
                            <i class="svg fas fa-code fa-3x"></i>
                            <h3>C#</h3>
                            <p>Conhecimento no framework ASP.NET Core e afins.</p>
                        </div>
                    </li>
                    <li>
                        <div class="inner">
                            <i class="svg fas fa-database fa-3x"></i>
                            <h3>Bando de dados</h3>
                            <p>Querys através do SQL Server e um pouco de Transact-SQL.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /SERVICES -->
    <!-- PROJECTS -->
    <div class="beker_tm_section" id="portfolio">
        <div class="container">
            <div class="beker_tm_main_title">
                <span>Projetos</span>
                <h3>Projetos didáticos desenvolvidos em ASP.NET Core</h3>
            </div>
            <div class="beker_tm_projects_wrap beker_tm_waypoint_effect">

                <ul class="beker_tm_portfolio_list">
                    @foreach (var p in Model.Projetos)
                    {
                        <li>

                            <div class="list_inner">
                                <div class="image_wrap">
                                    <img src="~/img/600x600.jpg" alt="Imagem demonstração do projeto" />
                                    <div class="main_image" data-img-url="/img/Uploads/@p.ImgBackground"></div>
                                </div>
                                <div class="overlay"></div>
                                <div class="overlay_text">
                                    <h3>@p.Titulo</h3>
                                    <span>@p.Tipo</span>
                                </div>
                                <a class="full_link"
                                   asp-action="ProjetoDetalhes" asp-route-Id="@p.ID"></a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <!-- /PROJECTS -->
    <!-- CONTACT -->
    <div class="beker_tm_section" id="contact">
        <div class="container">
            <div class="beker_tm_main_title contact ">
                <span>Contato</span>
                <h3>Seu feedback é bem vindo =)</h3>
            </div>
            <div class="beker_tm_contact_wrap beker_tm_waypoint_effect">
                <div class="leftpart">
                    <ul>
                        <li>
                            <div class="inner">
                                <img class="svg" src="img/svg/placeholder.svg" alt="" />
                                <span>Porto Alegre e regiões</span>
                            </div>
                        </li>
                        <li>
                            <div class="inner">
                                <img class="svg" src="img/svg/telephone.svg" alt="" />
                                <span>+55 (51) 99193-0743</span>
                            </div>
                        </li>
                        <li>
                            <div class="inner">
                                <img class="svg" src="img/svg/envelope.svg" alt="" />
                                <span><a href="#">biberg.marcelo@gmail.com</a></span>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="rightpart">
                    <div class="contact_list_wrap">
                        <form action="http://frenify.com/" method="post" class="contact_form" id="contact_form">
                            <div class="returnmessage" data-success="Your message has been received, We will contact you soon."></div>
                            <div class="empty_notice"><span>Please Fill Required Fields</span></div>
                            <div class="first_row">
                                <div class="first">
                                    <input id="name" type="text" placeholder="Nome" />
                                </div>
                                <div class="second">
                                    <input id="email" type="text" placeholder="E-mail" />
                                </div>
                            </div>
                            <div class="second_row">
                                <textarea id="message" placeholder="Mensagem"></textarea>
                            </div>
                            <div class="beker_tm_button" data-position="center">
                                <a id="send_message" href="#"><span>Enviar</span></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /CONTACT -->
</div>