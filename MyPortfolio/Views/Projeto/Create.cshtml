
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header no-margin-bottom">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Projetos</h2>
    </div>
</div>
<div class="container-fluid">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
        <li class="breadcrumb-item active">Adicionar projeto</li>
    </ul>
</div>
<section>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-8">
                        <form asp-action="Create">
                            <div class="form-group">
                                <label class="form-control-label">Título</label>
                                <input type="text" placeholder="Título para o seu projeto" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Categoria</label>
                                <input type="text" placeholder="Categoria do projeto" class="form-control">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Descrição</label>
                                <textarea rows="4" placeholder="Descrição sobre o projeto" class="form-control"></textarea>
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Imagem para o Background </label>
                                <div class="dropzone" id="image-1-1-2"></div>
                            </div>

                            <div class="form-group">
                                <label class="form-control-label">Imagem para o Background </label>
                                <div class="dropzone" id="image-2-2-2"></div>
                            </div>

                            <div class="form-group mt-5">
                                <input type="submit" value="Adicionar" class="btn btn-primary">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
